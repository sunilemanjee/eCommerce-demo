{
  "mappings": {
    "properties": {
      "product_name": {
        "type": "text",
        "analyzer": "standard",
        "copy_to": ["product_name_semantic_elser", "product_name_semantic_google", "product_name_semantic_e5"]
      },
      "description": {
        "type": "text",
        "analyzer": "standard",
        "copy_to": ["description_semantic_elser", "description_semantic_google", "description_semantic_e5"]
      },
      "initial_price": {
        "type": "float"
      },
      "final_price": {
        "type": "float"
      },
      "currency": {
        "type": "keyword"
      },
      "in_stock": {
        "type": "boolean"
      },
      "color": {
        "type": "keyword"
      },
      "size": {
        "type": "keyword"
      },
      "reviews_count": {
        "type": "integer"
      },
      "main_image": {
        "type": "keyword"
      },
      "category_url": {
        "type": "keyword"
      },
      "url": {
        "type": "keyword"
      },
      "category_tree": {
        "type": "object",
        "enabled": false
      },
      "country_code": {
        "type": "keyword"
      },
      "domain": {
        "type": "keyword"
      },
      "image_count": {
        "type": "integer"
      },
      "image_urls": {
        "type": "object",
        "enabled": false
      },
      "model_number": {
        "type": "keyword"
      },
      "offers": {
        "type": "text"
      },
      "other_attributes": {
        "type": "object",
        "enabled": false
      },
      "product_id": {
        "type": "keyword"
      },
      "rating": {
        "type": "float"
      },
      "related_products": {
        "type": "text"
      },
      "root_category": {
        "type": "keyword"
      },
      "top_reviews": {
        "type": "text"
      },
      "category": {
        "type": "keyword"
      },
      "brand": {
        "type": "keyword"
      },
      "all_available_sizes": {
        "type": "object",
        "enabled": false
      },
      "product_name_semantic_elser": {
        "type": "semantic_text",
        "inference_id": "${ELSER_INFERENCE_ID}",
        "model_settings": {
          "task_type": "sparse_embedding"
        }
      },
      "product_name_semantic_google": {
        "type": "semantic_text",
        "inference_id": "${EMBEDDING_INFERENCE_ID}"
      },
      "product_name_semantic_e5": {
        "type": "semantic_text",
        "inference_id": "${E5_INFERENCE_ID}"
      },
      "description_semantic_elser": {
        "type": "semantic_text",
        "inference_id": "${ELSER_INFERENCE_ID}",
        "model_settings": {
          "task_type": "sparse_embedding"
        }
      },
      "description_semantic_google": {
        "type": "semantic_text",
        "inference_id": "${EMBEDDING_INFERENCE_ID}"
      },
      "description_semantic_e5": {
        "type": "semantic_text",
        "inference_id": "${E5_INFERENCE_ID}"
      },
      "timestamp": {
        "type": "date"
      }
    }
  }
}
